@model AIS_Theatre.Web.Client.Models.GenreViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create Genre information</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Crash</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Genre.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Genre.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Genre.Name, new { htmlAttributes = new { @class = "form-control" } })
